{
  "name": "leetcode-practice-backend",
  "version": "1.0.0",
  "description": "Backend for LeetCode Practice App with PostgreSQL",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js",
    "setup": "node setup-comprehensive-database.js",
    "test-db": "node -e \"require('./setup-comprehensive-database.js').testConnection().then(() => process.exit(0)).catch(() => process.exit(1))\"",
    "import-data": "curl -X POST http://localhost:3001/api/import-problems",
    "health": "curl http://localhost:3001/api/health",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed-database.js",
    "db:backup": "node server/scripts/backupDatabase.js",
    "db:restore": "node server/scripts/restoreDatabase.js",
    "db:restore-local": "node server/scripts/restoreFromLocal.js",
    "db:import-problems": "node server/scripts/importProblems.js",
    "precommit": "npm run lint && npm run format:check"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-keywords": "^5.1.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "morgan": "^1.10.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.2.5"
  },
  "keywords": [
    "leetcode",
    "practice",
    "postgresql",
    "express",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  }
}
